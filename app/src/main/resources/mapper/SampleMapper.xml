<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xl.alm.app.mapper.SampleMapper">

    <resultMap type="com.xl.alm.app.entity.SampleEntity" id="SampleEntityResult">
        <result property="id" column="id"/>
        <result property="accountPeriod" column="account_period"/>
        <result property="factorType" column="factor_type"/>
        <result property="durationType" column="duration_type"/>
        <result property="designType" column="design_type"/>
        <result property="isShortTerm" column="is_short_term"/>
        <result property="factorValSet" column="factor_val_set"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="isDel" column="is_del"/>
    </resultMap>

    <sql id="selectSampleEntityVo">
        select id, account_period, factor_type, duration_type, design_type, is_short_term, 
               factor_val_set, create_time, create_by, update_time, update_by, is_del
        from t_dur_discount_factor
    </sql>

    <!-- 查询折现因子列表 -->
    <select id="selectSampleEntityList" parameterType="com.xl.alm.app.entity.SampleEntity" resultMap="SampleEntityResult">
        <include refid="selectSampleEntityVo"/>
        <where>
            <if test="id != null">and id = #{id}</if>
            <if test="accountPeriod != null and accountPeriod != ''">and account_period = #{accountPeriod}</if>
            <if test="factorType != null and factorType != ''">and factor_type = #{factorType}</if>
            <if test="durationType != null and durationType != ''">and duration_type = #{durationType}</if>
            <if test="designType != null and designType != ''">and design_type = #{designType}</if>
            <if test="isShortTerm != null and isShortTerm != ''">and is_short_term = #{isShortTerm}</if>
            and is_del = 0
        </where>
        order by create_time desc
    </select>

    <!-- 用id查询折现因子列表 -->
    <select id="selectSampleEntityById" parameterType="Long" resultMap="SampleEntityResult">
        <include refid="selectSampleEntityVo"/>
        where id = #{id} and is_del = 0
    </select>

    <!-- 根据账期、因子类型和久期类型查询折现因子 -->
    <select id="selectSampleEntityByCondition" resultMap="SampleEntityResult">
        <include refid="selectSampleEntityVo"/>
        <where>
            <if test="accountPeriod != null and accountPeriod != ''">and account_period = #{accountPeriod}</if>
            <if test="factorType != null and factorType != ''">and factor_type = #{factorType}</if>
            <if test="durationType != null and durationType != ''">and duration_type = #{durationType}</if>
            <if test="designType != null and designType != ''">and design_type = #{designType}</if>
            <if test="isShortTerm != null and isShortTerm != ''">and is_short_term = #{isShortTerm}</if>
            and is_del = 0
        </where>
        limit 1
    </select>

    <!-- 批量插入折现因子数据 -->
    <insert id="batchInsertSampleEntity" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        insert into t_dur_discount_factor (
            account_period, factor_type, duration_type, design_type, is_short_term, 
            factor_val_set, create_by, update_by
        ) values
        <foreach collection="list" item="item" separator=",">
            (
            #{item.accountPeriod},
            #{item.factorType},
            #{item.durationType},
            #{item.designType},
            #{item.isShortTerm},
            #{item.factorValSet},
            #{item.createBy},
            #{item.updateBy}
            )
        </foreach>
    </insert>

    <!-- 删除指定账期的折现因子数据 -->
    <update id="deleteSampleEntityByPeriod" parameterType="String">
        update t_dur_discount_factor set is_del = 1, update_time = now() 
        where account_period = #{accountPeriod} and is_del = 0
    </update>

    <!-- 删除指定id的折现因子数据 -->
    <update id="deleteSampleEntityById" parameterType="Long">
        update t_dur_discount_factor set is_del = 1, update_time = now() 
        where id = #{id} and is_del = 0
    </update>
</mapper>
